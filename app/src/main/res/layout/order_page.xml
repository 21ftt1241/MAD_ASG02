<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2DAC4"
    tools:context=".OrderPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="3dp"
        android:layout_y="0dp">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="Deprecated">

            <TextView
                android:id="@+id/wlcMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Welcome, !"
                android:textColor="#8C4303"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:layout_x="6dp"
                android:layout_y="42dp">

                <HorizontalScrollView
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <AbsoluteLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#C4A484">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="106dp"
                                android:layout_x="2dp"
                                android:layout_y="6dp"
                                android:src="@drawable/americano" />

                            <Button
                                android:id="@+id/americanoMinus"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="29dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="-" />

                            <Button
                                android:id="@+id/americanoAdd"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="113dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="+" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="69dp"
                                android:layout_y="159dp"
                                android:text="$2.50"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="48dp"
                                android:layout_y="120dp"
                                android:text="Americano"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/americanoNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="88dp"
                                android:layout_y="219dp"
                                android:text="0"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />
                        </AbsoluteLayout>

                        <LinearLayout
                            android:layout_width="3dp"
                            android:layout_height="match_parent" />

                        <AbsoluteLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#C4A484">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="106dp"
                                android:layout_x="2dp"
                                android:layout_y="6dp"
                                android:src="@drawable/latte" />

                            <Button
                                android:id="@+id/latteMinus"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="29dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="-" />

                            <Button
                                android:id="@+id/latteAdd"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="113dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="+" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="69dp"
                                android:layout_y="159dp"
                                android:text="$3.50"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="70dp"
                                android:layout_y="120dp"
                                android:text="Latte"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/latteNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="88dp"
                                android:layout_y="219dp"
                                android:text="0"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />
                        </AbsoluteLayout>

                        <LinearLayout
                            android:layout_width="3dp"
                            android:layout_height="match_parent" />

                        <AbsoluteLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#C4A484">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="106dp"
                                android:layout_x="2dp"
                                android:layout_y="6dp"
                                android:src="@drawable/cappuccino" />

                            <Button
                                android:id="@+id/cappuccinoMinus"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="29dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="-" />

                            <Button
                                android:id="@+id/cappuccinoAdd"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_x="113dp"
                                android:layout_y="209dp"
                                android:backgroundTint="#8C4303"
                                android:text="+" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="69dp"
                                android:layout_y="159dp"
                                android:text="$4.00"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="46dp"
                                android:layout_y="120dp"
                                android:text="Cappuccino"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/cappuccinoNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_x="88dp"
                                android:layout_y="219dp"
                                android:text="0"
                                android:textColor="#8C4303"
                                android:textSize="20sp" />
                        </AbsoluteLayout>


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </AbsoluteLayout>
    </ScrollView>


</AbsoluteLayout>